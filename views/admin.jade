extends layout

block head
  script(src="/javascripts/admin.js")
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Sortable/1.13.0/Sortable.min.js" integrity="sha512-5x7t0fTAVo9dpfbp3WtE2N6bfipUwk7siViWncdDoSz2KwOqVC1N9fDxEOzk0vTThOua/mglfF8NO7uVDLRC8Q==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

block content
  h1= title
  p Welcome to #{title}

  a(href='/') See normal view 

  form(action="/upload", method="post", enctype='multipart/form-data' id='upload_form')
    label(for="img") Select an image: 
    input(type="file", name="img", id="img" accept="image/*" multiple)
    input(type="button" id='upload_submit' value='submit')

  div(class='container')
    div(id='images_div' class='row card-deck')
    input(type='button' value='reorder' id='reorder')
    input(type='button' value='delete' id='delete')